<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cImg_pp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/person_icon"
        app:civ_border="true"
        app:civ_border_color="@color/coral"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/username"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/cImg_pp"
        app:layout_constraintStart_toEndOf="@id/cImg_pp"
        app:layout_constraintTop_toTopOf="@id/cImg_pp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_post"
        android:layout_width="0dp"
        android:layout_height="340dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fastfood2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cImg_pp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_like_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/like_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_post" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_cmt_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/comment_icon"
        app:layout_constraintStart_toEndOf="@id/img_like_icon"
        app:layout_constraintTop_toBottomOf="@id/img_post" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_share_icon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/share_icon"
        app:layout_constraintStart_toEndOf="@id/img_cmt_icon"
        app:layout_constraintTop_toBottomOf="@id/img_post" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/save_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_post" />


</androidx.constraintlayout.widget.ConstraintLayout>